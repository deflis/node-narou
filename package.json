{
  "name": "narou",
  "version": "1.1.0",
  "description": "Narou API Wrapper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deflis/node-narou.git"
  },
  "license": "MIT",
  "author": "deflis <deflis@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "browser": {
        "require": "./dist/index.browser.cjs",
        "import": "./dist/index.browser.js",
        "types": "./dist/index.browser.d.ts"
      }
    },
    "./browser": {
      "default": "./dist/index.browser.js",
      "require": "./dist/index.browser.cjs",
      "import": "./dist/index.browser.js",
      "types": "./dist/index.browser.d.ts"
    },
    "./*": {
      "default": "./dist/*.js",
      "require": "./dist/*.cjs",
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./utils": {
      "default": "./dist/utils/*.js",
      "require": "./dist/utils/*.cjs",
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "package.json",
    "pnpm-lock.yaml",
    "README.md"
  ],
  "scripts": {
    "build": "run-z check build:tsc",
    "build:tsc": "tsup ./src",
    "check": "run-z check:lint,check:build,test",
    "check:lint": "eslint src/** test/**",
    "check:build": "tsc --noEmit",
    "prepack": "run-z format build",
    "format": "eslint --fix src/** test/**",
    "test": "vitest run",
    "docs": "run-z docs:clean docs:typedoc",
    "docs:clean": "pnpm dlx rimraf docs",
    "docs:typedoc": "pnpm dlx typedoc --out ./docs src/index.ts"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^15.15.0",
    "msw": "^2.7.5",
    "prettier": "^3.5.3",
    "run-z": "^2.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8"
  },
  "module": "dist/index.js",
  "packageManager": "pnpm@10.10.0"
}
